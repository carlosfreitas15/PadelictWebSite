
@{
    /**/

    ViewBag.Title = "Registo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>Resgisto</title>
    <link type="text/css" href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>

<style>
    body {
        height: 100vh;
        justify-content: center;
        align-items: center;
        display: flex;
        background-image: url(../Images/fundo_preto.png);
        min-height: 100vh;
        position: relative;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .boody-content-btn {
        margin: auto;
        width: 456px;
        align-items: center;
        padding-bottom: 12px;
        padding-top: 24px;
        height: 567px;
        background-color: transparent;
        backdrop-filter: blur(5px);
    }

    .text {
        color: #927614;
        margin-left: 45px;
        text-decoration: none;
    }

        .text:hover {
            color: #927614;
        }
   
</style>
<body>
    <div class="container">
        <div class="boody-content-btn rounded-5">
            <a href="~/Home/Index">
                <div style="display: inline-block; position: relative;">
                    <div style="position: absolute; top: 50%; left: 23px;">
                        <span style="transform: translateY(-50%); display: inline-block; width: 0; height: 0; border-top: 20px solid transparent; border-bottom: 20px solid transparent; border-right: 30px solid #927614;"></span>
                    </div>


                </div>
                </a>
                <div class="mb-5 text-center">
                    <img src="~/Images/logo_branco.png" class=" mx-5">

                </div>
                <div class="mb-5 mx-5" style="background-color: #927614; border-radius:50px; font-size:25px;">
                    @Html.ActionLink("Atleta", "registaratleta", "Registos", null, new { @class = " btn  btn-lg text-center w-100 text-light" })
                </div>
                <div class="mb-5 mx-5" style="background-color: #927614; border-radius:50px; font-size:25px;">
                    @Html.ActionLink("Treinador", "registartreinador", "Registos", null, new { @class = " btn  btn-lg text-center w-100 text-light" })

                </div>
                <div class="mb-5 mx-5" style="background-color: #927614; border-radius:50px; font-size:25px; ">

                    @Html.ActionLink("Clube", "registarclube", "Registos", null, new { @class = " btn  btn-lg text-center w-100 text-light" })
                </div>

</div>

    </div>
</body>
</html>

